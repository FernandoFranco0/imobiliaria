@using RealState.Models
@model UserModel

@{
    ViewBag.Title = "AddUpdate";
}

<h2>Adicionar Usuario</h2>

<h4>User</h4>
@using (Html.BeginForm("AddUpdate", "User", FormMethod.Post))
{
<div class="form-horizontal">

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        <label class="control-label col-sm-2">Nome:</label>
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-sm-2">Email:</label>
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-sm-2">Senha:</label>
        <div class="col-md-10">
            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-sm-2">CpfCnpj:</label>
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.CpfCnpj, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.CpfCnpj, "", new { @class = "text-danger" })
        </div>
    </div>
</div>

    <div class="form-group">
        <input type="submit" value="Criar" class="btn btn-default" />
    </div>
}
