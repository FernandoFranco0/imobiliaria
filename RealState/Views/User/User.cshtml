@using RealState.Models
@model List<UserModel>

@{
    ViewBag.Title = "Users";
}


<script type="text/javascript">
    $(document).ready(function () {
        $('#userTable').DataTable();
    });
</script>

<h2>Todos Usuarios</h2>

@Html.ActionLink("Add User", "AddUpdate", "User", new { }, new { @class = "btn btn-default" })

<table class="table table" id="userTable">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Email</th>
            <th>Options</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var m in Model)
        {
            <tr>
                <td>@m.Id</td>
                <td>@m.Name</td>
                <td>@m.Email</td>
                <td>
                    <ul>
                        <li>
                            @Html.ActionLink("Detalhes", "Index", "User", new { UserId = m.Id }, new { @class = "btn btn-default" })
                        </li>
                        <li>
                            @Html.ActionLink("Apagar", "Remove", "User", new { UserId = m.Id }, new { @class = "btn btn-default" })
                        </li>
                    </ul>
                </td>
            </tr>
        }
    </tbody>
</table>
