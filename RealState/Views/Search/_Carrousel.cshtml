@using RealState.Models
@model PropertyModel
@{
    var Urls = Model.ImagesUrl;
    var NumberOfPhotos = Urls.Count;
    var Max = NumberOfPhotos > 3 ? 3 : NumberOfPhotos;
    var Rest = NumberOfPhotos - Max + 1;
}

<div>
    <div id="Property-@Model.Id" class="carousel slide" data-interval="false">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#Property-@Model.Id" data-slide-to="0" class="active"></li>
            @for (int i = 1; i < Max; i++)
            {
                <li data-target="#Property-@Model.Id" data-slide-to="@i"></li>
            }
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner">
            <div class="item active">
                <img src="@Model.ImagesUrl[0]" style="max-height:30vh;">
            </div>
            @for (int i = 1; i < Max; i++)
            {
                <div class="item">
                    <img src="@Model.ImagesUrl[i]" style="max-height:30vh;">
                    @if (i == 2)
                    {
                        <div class="carousel-caption carrouselH3" style="">
                            <h3 style="">+@Rest Foto(s)</h3>
                        </div>
                    }

                </div>

            }
        </div>

        <!-- Left and right controls -->
        <a class="left carousel-control" href="#Property-@Model.Id" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#Property-@Model.Id" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>