                        @Html.TextBoxFor(m => Model.City, new { @class = "form-control", placeholder = "Cidade" })
                        @Html.TextBoxFor(m => Model.NeighboorHood, new { @class = "form-control", placeholder = "Bairro" })
                        @Html.TextBoxFor(m => Model.StreetName, new { @class = "form-control", placeholder = "Rua" })
                        @Html.TextBoxFor(m => Model.Area, new { @class = "form-control", placeholder = "Area mínima" })
                        @Html.TextBoxFor(m => Model.GarageSpace, new { @class = "form-control", placeholder = "Espaço na garagem mínimo" })
                    *@
                </div>
